{
  "name": "lendslog-api",
  "version": "0.0.1",
  "description": "handle your lend money in easy way",
  "author": "janani811",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier . --write --log-level silent",
    "lint": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "test:unit": "jest --config ./test/config/jest-unit.json --passWithNoTests",
    "test:int": "dotenv -e .env.testing -- npm run migration:run && dotenv -e .env.testing -- jest --config ./test/config/jest-int.json",
    "test:e2e": "dotenv -e .env.testing -- npm run migration:run && dotenv -e .env.testing -- jest --config ./test/config/jest-e2e.json --passWithNoTests",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:int:watch": "npm run test:int -- --watch",
    "test:e2e:watch": "npm run test:e2e -- --watch",
    "test": "jest --config ./test/config/jest-unit.json --passWithNoTests && dotenv -e .env.testing -- npm run migration:run && dotenv -e .env.testing -- jest --config ./test/config/jest-int.json && dotenv -e .env.testing -- jest --config ./test/config/jest-e2e.json --passWithNoTests ",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "migration:generate": "drizzle-kit generate --custom --config=src/database/config/migration.config.ts",
    "migration:push": "drizzle-kit push --config=src/database/config/migration.config.ts",
    "migration:drop": "drizzle-kit drop --config=src/database/config/migration.config.ts",
    "migration:run": "tsx ./src/database/scripts/migrate.ts",
    "documentation:generate": "npx @compodoc/compodoc -p tsconfig.json -s",
    "documentation:serve": "serve documentation",
    "prepare": "if [ \"$npm_config_omit\" = \"dev\" ]; then echo \"Skip husky installation\"; else husky install; fi"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/swagger": "^7.4.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "moment": "^2.30.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "twilio": "^5.2.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.25",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.2",
    "@nestjs/testing": "^10.3.10",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.15.0",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.22.8",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
